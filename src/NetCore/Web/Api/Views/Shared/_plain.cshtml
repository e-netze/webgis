@{
    Layout = null;

    var response = this.Context.Response;

    if (ViewData["plain"] != null)
    {
        if (!String.IsNullOrWhiteSpace((string)ViewData["ContentType"])) {
            this.Context.Response.ContentType = (string)ViewData["ContentType"];
        }
        var buffer = System.Text.Encoding.UTF8.GetBytes((string)ViewData["plain"]);
        response.Body.Write(buffer, 0, buffer.Length);
    }

}
