@model Cms.Models.LoginModel
@{
    ViewData["Title"] = "Index";
}

<style>

    input {
        margin:5px 0px 5px 0px;
        padding:5px;
        border-radius:4px;
        border:1px solid #808080;
        width:100%;
    }
    .error-message {
        color:red;
        padding:5px;
        border:1px solid red;
        border-radius:4px;
    }
    .login-panel {
        max-width: 450px;
        margin: 40px auto;
        padding: 20px;
        background-color: #f8f8f8;
        border-radius: 5px;
        border: 2px solid #82C828;
        box-shadow: 0 0.25rem 0.75rem rgba(0, 0, 0, 0.2);
    }

</style>



<div class="login-panel">
    <h2>Login</h2>

    <form action="Login" method="post" asp-antiforgery="true">
        @if (!String.IsNullOrEmpty(Model?.ErrorMessage))
        {
            <div class="error-message">
                @Model.ErrorMessage
            </div>
        }
        <input type="text" name="cms_login_user" placeholder="Username" value="@(Model?.Username ?? String.Empty)" />
        <br />
        <input type="password" name="cms_login_password" placeholder="Passwort" />
        <br />
        <br />
        <button>Login</button>
    </form>
</div>