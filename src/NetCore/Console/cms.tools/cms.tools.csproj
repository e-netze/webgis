  <ItemGroup>
    <Content Include="schemes\secrets-template.xml">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="schemes\webgis\schema.xml">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
